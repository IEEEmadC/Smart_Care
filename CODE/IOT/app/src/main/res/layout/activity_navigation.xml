<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navigationActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    android:background="@drawable/background16">
    <!--tools:openDrawer="start"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/LL1">

            <include
                layout="@layout/activity_navigation_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/R1">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/LH1">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:id="@+id/L1"
                android:layout_gravity="center"
                android:background="@drawable/trans_white_rectangle"
                android:clickable="true">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView2"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/txtCelsius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waiting ..."
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:id="@+id/L2"
                android:layout_gravity="center"
                android:background="@drawable/trans_purple_rectangle"
                android:clickable="true">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView1"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/txtHumidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waiting ..."
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:clickable="true"
                android:layout_gravity="center"
                android:background="@drawable/trans_white_rectangle"
                android:id="@+id/L3">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waiting ..."
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>


        </LinearLayout>

                    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LH2">


                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:id="@+id/R3"
                    android:background="@drawable/trans_purple_rectangle">
                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progressbar_states"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/tv_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Waiting .."
                   android:layout_centerInParent="true"
                    />
                </RelativeLayout>



            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:clickable="true"
                android:id="@+id/R4"
                android:background="@drawable/trans_white_rectangle">

               <ImageView
                   android:layout_width="140dp"
                   android:layout_height="140dp"
                   android:id="@+id/imageView3"
                   android:layout_centerInParent="true"
                   android:src="@drawable/emergency"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:id="@+id/R5"
                android:background="@drawable/trans_purple_rectangle">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView4"
                    android:src="@drawable/ok"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

        </LinearLayout>

                </LinearLayout>

        </LinearLayout>
            </ScrollView>
            </RelativeLayout>
    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/activity_navigation_header"
        android:fitsSystemWindows="true"
        android:layout_marginTop="56dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:focusable="true"
            app:civ_border_color="#080808"
            app:civ_border_width="2.5dp"
            tools:ignore="RtlCompat"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:src="@mipmap/ic_lphoto_round"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="107dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:hint="Name"/>

        <TextView
            android:id="@+id/email1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="125dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:hint="Email"/>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>